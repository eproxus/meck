{profiles, [
    {test, [
        {erl_opts, [debug_info]},
        {cover_enabled, true},
        {cover_opts, [verbose]}
    ]},
    {compile, [
        {erl_opts, [
            debug_info,
            warnings_as_errors,
            warn_export_all,
            warn_export_vars,
            warn_shadow_vars,
            warn_obsolete_guard,
            warn_unused_import
        ]}
    ]}
]}.
